{
  "name": "iteration-service",
  "license": "MIT",
  "scripts": {
    "test": "cross-env NODE_ENV=test jest ./src",
    "posttest": "yarn run lint",
    "test:integration": "cross-env NODE_ENV=test jest ./tests/integration",
    "lint": "eslint .",
    "deploy": "yarn test && node build.js && sls deploy --stage=production -v",
    "local:service": "cross-env sls offline start --stage=development --port 3020 --noTimeout",
    "local:install": "sls dynamodb install",
    "local:dynamodb": "node ./scripts/start-dynamodb-local.js"
  },
  "devDependencies": {
    "aws-sdk": "^2.248.1",
    "eslint": "^4.19.1",
    "serverless": "^1.27.3",
    "serverless-webpack": "^5.1.5",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "cross-env": "^5.1.6",
    "dynamodb-doc-client-wrapper": "^2.0.1",
    "dynamodb-localhost": "^0.0.5",
    "ensure-request": "^4.0.0",
    "jest": "^23.0.1",
    "lambda-error-handler": "^1.0.0",
    "serverless-dynamodb-client": "^0.0.2",
    "serverless-dynamodb-local": "^0.2.30",
    "serverless-offline": "^3.24.5",
    "webpack": "^4.10.2"
  }
}
