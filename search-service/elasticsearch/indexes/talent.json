{
  "settings": {
    "number_of_shards": "1",
    "number_of_replicas": "0",
    "analysis": {
      "filter": {
        "english_stemmer": {
          "type": "stemmer",
          "language": "english"
        },
        "english_possessive_stemmer": {
          "type": "stemmer",
          "language": "possessive_english"
        },
        "english_stop": {
          "type": "stop",
          "stopwords": "_english_"
        },
        "asciifolding_custom": {
          "type": "asciifolding",
          "preserve_original": "true"
        }
      },
      "analyzer": {
        "english_custom": {
          "filter": [
            "asciifolding_custom",
            "english_possessive_stemmer",
            "lowercase",
            "english_stop",
            "english_stemmer"
          ],
          "tokenizer": "standard"
        }
      }
    }
  },
  "mappings": {
    "doc": {
      "_all": {
        "enabled": false
      },
      "properties": {
        "commonRole": {
          "type": "keyword"
        },
        "entityType": {
          "type": "keyword",
          "index": false
        },
        "name": {
          "type": "text",
          "index": false
        },
        "firstNames": {
          "type": "text",
          "fields": {
            "fuzzy": {
              "type": "text",
              "term_vector": "yes",
              "analyzer": "standard"
            },
            "sort": {
              "type": "keyword"
            }
          },
          "analyzer": "english_custom"
        },
        "id": {
          "type": "keyword",
          "index": false
        },
        "image": {
          "type": "text",
          "index": false
        },
        "imageColor": {
          "type": "text",
          "index": false
        },
        "imageCopyright": {
          "type": "text",
          "index": false
        },
        "imageRatio": {
          "type": "float",
          "index": false
        },
        "lastName": {
          "type": "text",
          "fields": {
            "fuzzy": {
              "type": "text",
              "term_vector": "yes",
              "analyzer": "standard"
            }
          },
          "analyzer": "english_custom"
        },
        "lastName_sort": {
          "type": "keyword"
        },
        "status": {
          "type": "keyword"
        },
        "talentType": {
          "type": "keyword"
        },
        "version": {
          "type": "short",
          "index": false
        }
      }
    }
  }
}
